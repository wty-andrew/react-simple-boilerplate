{
  "name": "electron-app",
  "version": "1.0.0",
  "description": "A lightweight starter project for react electron",
  "main": "./main/index.js",
  "author": "Andrew",
  "license": "MIT",
  "scripts": {
    "start": "electron main",
    "dev": "npm run dev:renderer & npm run dev:main",
    "dev:renderer": "cross-env NODE_ENV=development node server.js",
    "dev:main": "cross-env NODE_ENV=development ELECTRON_DISABLE_SECURITY_WARNINGS=true nodemon --watch main --exec 'yarn start'",
    "build": "rimraf build && cross-env NODE_ENV=production webpack",
    "lint": "eslint src",
    "test": "cross-env NODE_ENV=test jest --config=jest.config.js",
    "package-linux": "electron-packager . electron-app --platform=linux --arch=x64 --out dist/ --overwrite --prune=true",
    "deb64": "electron-installer-debian  --src dist/electron-app-linux-x64/ --dest dist/installers/ --arch amd64"
  },
  "dependencies": {
    "connected-react-router": "^6.8.0",
    "history": "^4.10.1",
    "prop-types": "^15.7.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-redux": "^7.2.2",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
    "redux": "^4.0.5",
    "redux-thunk": "^2.3.0",
    "styled-components": "^5.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-react": "^7.12.5",
    "@hot-loader/react-dom": "^16.10.2",
    "@testing-library/jest-dom": "^5.11.5",
    "@testing-library/react": "^11.1.1",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.0",
    "babel-plugin-module-resolver": "^4.0.0",
    "babel-polyfill": "^6.26.0",
    "cross-env": "^7.0.2",
    "css-loader": "^5.0.1",
    "electron": "^10.1.5",
    "electron-devtools-installer": "^3.1.1",
    "electron-installer-debian": "^3.1.0",
    "electron-packager": "^15.1.0",
    "eslint": "^7.13.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "express": "^4.17.1",
    "html-webpack-plugin": "^5.0.0-alpha.10",
    "jest": "^26.6.3",
    "mini-css-extract-plugin": "^1.3.0",
    "nodemon": "^2.0.6",
    "prettier": "^2.1.2",
    "react-hot-loader": "^4.8.3",
    "redux-devtools-extension": "^2.13.8",
    "rimraf": "^3.0.2",
    "style-loader": "^2.0.0",
    "webpack": "^5.4.0",
    "webpack-cli": "^4.2.0",
    "webpack-dev-middleware": "^4.0.2",
    "webpack-hot-middleware": "^2.25.0",
    "webpack-merge": "^5.3.0"
  }
}
