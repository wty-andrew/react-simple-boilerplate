{
  "name": "react-simple-boilerplate",
  "version": "1.0.0",
  "description": "A lightweight starter project for react",
  "main": "index.js",
  "author": "Andrew",
  "license": "MIT",
  "scripts": {
    "start": "electron main",
    "dev": "npm run dev:renderer & npm run dev:main",
    "dev:renderer": "cross-env NODE_ENV=development node server.js",
    "dev:main": "cross-env NODE_ENV=development ELECTRON_DISABLE_SECURITY_WARNINGS=true nodemon --watch main --exec 'yarn start'",
    "build": "rimraf public && cross-env NODE_ENV=production webpack -p",
    "lint": "eslint src",
    "test": "cross-env NODE_ENV=test jest --config=jest.config.js",
    "test:watch": "npm test -- --watch",
    "test:coverage": "npm test -- --coverage"
  },
  "dependencies": {
    "connected-react-router": "^6.3.2",
    "electron": "^4.1.4",
    "express": "^4.16.4",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-redux": "^6.0.1",
    "react-router": "^5.0.0",
    "react-router-dom": "^5.0.0",
    "redux": "^4.0.1",
    "redux-thunk": "^2.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@babel/preset-env": "^7.4.3",
    "@babel/preset-react": "^7.0.0",
    "@hot-loader/react-dom": "^16.8.6",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.7.1",
    "babel-loader": "^8.0.5",
    "babel-plugin-module-resolver": "^3.2.0",
    "babel-polyfill": "^6.26.0",
    "cross-env": "^5.2.0",
    "css-loader": "^2.1.1",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.12.1",
    "enzyme-to-json": "^3.3.5",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^24.7.1",
    "mini-css-extract-plugin": "^0.5.0",
    "node-sass": "^4.12.0",
    "nodemon": "^1.18.11",
    "prettier": "^1.16.4",
    "react-hot-loader": "^4.8.3",
    "redux-devtools-extension": "^2.13.8",
    "rimraf": "^2.6.3",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.3.0",
    "webpack-dev-middleware": "^3.6.2",
    "webpack-hot-middleware": "^2.24.3",
    "webpack-merge": "^4.2.1"
  }
}
